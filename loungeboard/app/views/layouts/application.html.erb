<!DOCTYPE html>
<html>
<head>
  <title>Loungeboard</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div>
	<% if flash[:alert] %>
		<p class="flash-error"><%= flash[:alert] %></p>
	<% end %>
	<% if flash[:notice] %>
		<p class="flash-notice"><%= flash[:notice] %></p>
	<% end %>
</div>
<%= yield %>

</body>
</html>
